generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  password  String? // Optional for OAuth

  // --- OAuth Fields ---
  provider   String? // e.g., "google", or null for local
  providerId String? // Unique ID from the provider

  avatarUrl String?   @default("https://api.dicebear.com/8.x/bottts-neutral/svg?seed=default")

  // --- Password Reset Fields ---
  passwordResetToken   String?   @unique
  passwordResetExpires DateTime?

  // --- Relations ---
  projects Project[] @relation("ProjectTeam")
  tasks    Task[]    @relation("Assignee")
  comments Comment[]

  // Optional index for OAuth lookup
  // @@index([provider, providerId])
}

model Project {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  // Relation to Tasks: If a Project is deleted, cascade delete its Tasks
  tasks       Task[] // Cascade delete is defined on the Task side of the relation
  team        User[]  @relation("ProjectTeam")
}

enum TaskStatus {
  TO_DO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Task {
  id           Int          @id @default(autoincrement())
  title        String
  description  String?
  status       TaskStatus   @default(TO_DO)
  priority     TaskPriority @default(MEDIUM)
  dueDate      DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  // --- ADDED onDelete: Cascade ---
  project      Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId    Int

  // --- ADDED onDelete: SetNull (Optional, keeps task if user deleted) ---
  assignee     User?        @relation("Assignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  assigneeId   Int?

  // Relation to SubTasks: Cascade defined on SubTask side
  subTasks     SubTask[]
  // Relation to Comments: Cascade defined on Comment side
  comments     Comment[]
}

model SubTask {
  id        Int     @id @default(autoincrement())
  title     String
  isDone    Boolean @default(false)
  // --- ADDED onDelete: Cascade ---
  task      Task    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId    Int
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())

  // --- ADDED onDelete: Cascade (Optional, deletes comment if author deleted) ---
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  Int

  // --- ADDED onDelete: Cascade ---
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId    Int
}
